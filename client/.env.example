# ===========================================
# BBC Agents Client Configuration
# ===========================================
# Copy this file to .env for development
# Copy this file to .env.production for production builds

# Backend server base URL (for auth routes: /auth/login, /auth/register)
# Development: http://localhost:3000
# Production: https://your-backend.up.railway.app
VITE_API_BASE_URL=http://localhost:3000

# API URL - Backend API endpoint (for data routes: /api/tasks, etc.)
# Development: http://localhost:3000/api
# Production: https://your-backend.up.railway.app/api
VITE_API_URL=http://localhost:3000/api
